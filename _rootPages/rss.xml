---
title: RSS feed
description: nobody uses these but everybody should
layout: none
permalink: /rss.xml
---
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
		<channel>
			<title>Box Critters Modding Comminity</title>
			<link>{{site.url}}</link>
			{% for item in site.documents %}
				{% if item.rss %}
					<item>
						<title type="html">{{ item.title }}</title>
						<link href="{{ item.url }}" rel="alternate" type="text/html" title="{{ item.title|slugify }}"/>
						{% for author in item.author %}
							<author><name>{{ author }}</name></author>
						{% endfor %}
						{% if item.date %}<published>{{item.date| date_to_xmlschema }}</published>{% endif %}
						{% if item.description %}<summary type="html">{{item.description | replace: "<","&lt;" | replace: ">","&gt;"}}</summary>{% endif %}
						<id>{{ item.url }}</id>
						<content type="html" xml:base="{{ item.url }}">{{item.content | replace: "<","&lt;" | replace: ">","&gt;"}}</content>
							<category term="News"/>
					</item>
				{% endif %}
			{% endfor %}
		</channel>
</rss>
